<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    
    <PackageId>Client.Util</PackageId>
    <Version>1.0.0-alpha</Version>
    <Authors>EvoMaster Team</Authors>
    <Company>Kristiania</Company>
  </PropertyGroup>

  <Target Name="PublishNuGetLocally" AfterTargets="Build">
    <Exec Command="dotnet pack $(ProjectPath)"/>
    <Exec Command="dotnet nuget delete --source LocalNuget $(PackageId) $(PackageVersion) --non-interactive" ContinueOnError="WarnAndContinue"/>
    <Exec Command="dotnet nuget push --source LocalNuget $(ProjectDir)bin\$(ConfigurationName)\$(PackageId).$(PackageVersion).nupkg" />
  </Target>
  
</Project>
