<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <PackageId>Controller</PackageId>
        <Version>1.1.1-SNAPSHOT</Version>
        <Authors>EvoMaster Team</Authors>
        <Company>Kristiania</Company>
    
    </PropertyGroup>
    <ItemGroup>
        <ProjectReference Include="../Controller.Api/Controller.Api.csproj" />
        <ProjectReference Include="../Client.Util/Client.Util.csproj" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="System.ServiceModel.Primitives" Version="4.8.0" />
    </ItemGroup>

<!--    <ItemGroup>-->
<!--        <Content Include="Resources/warning.html">-->
<!--            <Pack>true</Pack>-->
<!--            <PackagePath>/contentFiles</PackagePath>-->
<!--        </Content>-->
<!--    </ItemGroup>-->

        <ItemGroup>
            <Content Include="Resources/warning.html">
                <Pack>true</Pack>
                <PackagePath>content\any\any;contentFiles\any\any\;;</PackagePath>
                <PackageCopyToOutput>true</PackageCopyToOutput>
            </Content>

            <None Include="build/Controller.props">
                <Pack>true</Pack>
                <PackagePath>build\$(TargetFramework)</PackagePath>
                <PackageCopyToOutput>true</PackageCopyToOutput>
            </None>
        </ItemGroup>
    
    <Target Name="PublishNuGetLocally" AfterTargets="Build">
        <Exec Command="dotnet pack $(ProjectPath)" />
        <Exec Command="dotnet nuget delete --source ~/.nuget/packages $(PackageId) $(PackageVersion) --non-interactive" ContinueOnError="WarnAndContinue" />
        <Exec Command="dotnet nuget push --source ~/.nuget/packages $(ProjectDir)bin\$(ConfigurationName)\$(PackageId).$(PackageVersion).nupkg" />
    </Target>

</Project>